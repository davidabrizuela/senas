#: include kv/dashboard.kv
#: include kv/firstscreen.kv

NavigationLayout:
    id:nav_layout


    ScreenManager:

        Screen:

            BoxLayout:
                orientation:'vertical'

                MDToolbar:
                    title: app.title
                    elevation:10
                    left_action_items:[["menu", lambda x: nav_drawer.set_state()]]


                ScreenManager:
                    id:screen_manager

    MDNavigationDrawer:
        id: nav_drawer

        BoxLayout:
            orientation:'vertical'
            padding:"8dp"
            spacing:"8dp"

            Image:
                size_hint: None, None
                size:"200dp","200dp"
                source:"logo2.png"
            ScrollView:

                MDList:
                    id: nav_list
                    OneLineIconListItem:
                        text:"DashBoard"
                        on_release:
                            screen_manager.current = "dashboard"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon: "view-dashboard"

                    OneLineIconListItem:
                        text:"Primera Pantalla"
                        on_release:
                            screen_manager.current = "first_screen"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon: "cart"
